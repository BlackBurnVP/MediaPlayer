<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:background="@drawable/backgrond_song">
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1">
        <TextView
                android:text="Song Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/txtSongName" android:layout_weight="1"
                android:textSize="20sp" android:textStyle="bold"/>
        <TextView
                android:text="Author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtAuthor" android:layout_weight="1"/>
    </LinearLayout>
    <Button
            android:text="Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnPlay" android:layout_weight="0"/>
</LinearLayout>
</LinearLayout>